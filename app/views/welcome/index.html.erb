<!DOCTYPE html>
<html lang="en" class="no-js">
	<head>
		<title>ArtApp</title>
	    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	    <%= stylesheet_link_tag "normalize" %>
	    <%= stylesheet_link_tag "component" %>
	    <%= stylesheet_link_tag "demo" %>
	    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	    <%= javascript_include_tag 'modernizr.custom' %>
	    <%= csrf_meta_tags %>
		<link href='http://fonts.googleapis.com/css?family=Raleway:200,400,600' rel='stylesheet' type='text/css'>
	</head>
	<body>
		<div class="container">
			<div class="top clearfix">
				<span><%= link_to 'Git Hub for This Project', "https://github.com/lwschjang/art_app", class: 'icon icon-prev' %></span>
			</div>
			<div id="boxgallery" class="boxgallery" data-effect="effect-2">
				<% @arts.each do |art| %>
				    <div class="panel"><%= image_tag(art.pic_url) %></div>
				<% end %>
		    </div>
			<header class="header">
				<h1>Will Schjang's Art</h1>
				<nav class="demos">
					<%= link_to 'Purchase', "http://www.designbyhumans.com/shop/FutureEmperor/" %>
				</nav>
			</header>
		</div><!-- /container -->

		<%= javascript_include_tag 'classie' %>
		<%= javascript_include_tag 'boxesFx' %>
		<script>
			new BoxesFx( document.getElementById( 'boxgallery' ) );
		</script>
	</body>
</html>
